@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid auth-page">
    <div class="row justify-content-center py-3 py-md-4">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-lg auth-card">
                <div class="card-body p-4 p-md-4 auth-card-body">
                    <h1 class="h3 fw-bold mb-4 text-center">Welcome Back</h1>
                    <p class="text-muted text-center mb-3">Sign in to your FinanceApp account</p>

                    <!-- Login Form -->
                    <form id="account" method="post">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show @(!Model.ModelState.IsValid ? "" : "d-none")" role="alert" id="validationAlert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                        <!-- Email Input -->
                        <div class="mb-2">
                            <label asp-for="Input.Email" class="form-label fw-500">Email Address</label>
                            <input asp-for="Input.Email" class="form-control" 
                                   autocomplete="username" 
                                   aria-required="true" 
                                   placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-2">
                            <label asp-for="Input.Password" class="form-label fw-500">Password</label>
                            <input asp-for="Input.Password" class="form-control" 
                                   autocomplete="current-password" 
                                   aria-required="true" 
                                   placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="invalid-feedback d-block"></span>
                        </div>

                        <!-- Remember Me Checkbox -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe" />
                            <label class="form-check-label" for="rememberMe">
                                Remember me on this device
                            </label>
                        </div>

                        <!-- Login Button -->
                        <button type="submit" class="btn btn-primary w-100 fw-600 mb-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Sign In
                        </button>

                        @{
                            if ((Model.ExternalLogins?.Count ?? 0) > 0)
                            {
                                <div class="d-flex align-items-center my-3 auth-divider">
                                    <hr class="flex-grow-1" />
                                    <span class="px-3 text-muted small">OR</span>
                                    <hr class="flex-grow-1" />
                                </div>

                                <div class="d-grid gap-2 mb-3">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        var providerName = provider.Name?.ToLowerInvariant() ?? string.Empty;
                                        var providerClass = providerName switch
                                        {
                                            "google" => "btn-provider-google",
                                            "facebook" => "btn-provider-facebook",
                                            "twitter" => "btn-provider-twitter",
                                            "x" => "btn-provider-twitter",
                                            _ => "btn-provider-default"
                                        };
                                        var providerIcon = providerName switch
                                        {
                                            "google" => "bi-google",
                                            "facebook" => "bi-facebook",
                                            "twitter" => "bi-twitter-x",
                                            "x" => "bi-twitter-x",
                                            _ => "bi-box-arrow-in-right"
                                        };

                                        <button form="external-account" type="submit" class="btn btn-provider @providerClass" name="provider" value="@provider.Name">
                                            <i class="bi @providerIcon me-2" aria-hidden="true"></i>
                                            Continue with @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            }
                        }

                        <!-- Helper Links -->
                        <div class="text-center">
                            <p class="mb-2">
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">
                                    <i class="bi bi-question-circle me-1"></i>
                                    Forgot your password?
                                </a>
                            </p>
                            <p class="mb-0">
                                Don't have an account?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none">
                                    Sign up here
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post"></form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show validation summary if there are errors
        document.addEventListener('DOMContentLoaded', function() {
            const validationAlert = document.getElementById('validationAlert');
            if (validationAlert && validationAlert.textContent.trim().length > 0) {
                validationAlert.classList.remove('d-none');
            }
        });
    </script>
}

