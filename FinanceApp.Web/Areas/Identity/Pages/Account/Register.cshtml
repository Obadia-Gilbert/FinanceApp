@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid">
    <div class="row justify-content-center py-5">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <!-- Register Card -->
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-5">
                    <h1 class="h3 fw-bold mb-4 text-center">Create Account</h1>
                    <p class="text-muted text-center mb-4">Join FinanceApp today to manage your finances</p>

                    <!-- Register Form -->
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                        <!-- Validation Summary -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show @(!Model.ModelState.IsValid ? "" : "d-none")" role="alert" id="validationAlert">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="Input.FirstName" class="form-label fw-500">First Name</label>
                            <input asp-for="Input.FirstName" class="form-control form-control-lg" autocomplete="given-name" placeholder="Your first name" />
                            <span asp-validation-for="Input.FirstName" class="invalid-feedback d-block small"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="Input.LastName" class="form-label fw-500">Last Name</label>
                            <input asp-for="Input.LastName" class="form-control form-control-lg" autocomplete="family-name" placeholder="Your last name" />
                            <span asp-validation-for="Input.LastName" class="invalid-feedback d-block small"></span>
                        </div>

                        <!-- Email Input -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label fw-500">Email Address</label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" 
                                   autocomplete="username" 
                                   aria-required="true" 
                                   placeholder="Enter your email" />
                            <span asp-validation-for="Input.Email" class="invalid-feedback d-block small"></span>
                        </div>

                        <!-- Password Input -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label fw-500">Password</label>
                            <input asp-for="Input.Password" class="form-control form-control-lg" 
                                   autocomplete="new-password" 
                                   aria-required="true" 
                                   placeholder="Choose a strong password" />
                            <small class="form-text text-muted d-block mt-1">
                                <i class="bi bi-info-circle me-1"></i>
                                At least 6 characters with uppercase, lowercase, numbers, and symbols
                            </small>
                            <span asp-validation-for="Input.Password" class="invalid-feedback d-block small"></span>
                        </div>

                        <!-- Confirm Password Input -->
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-500">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" 
                                   autocomplete="new-password" 
                                   aria-required="true" 
                                   placeholder="Re-enter your password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback d-block small"></span>
                        </div>

                        <!-- Profile Photo -->
                        <div class="mb-4">
                            <label asp-for="Input.ProfileImage" class="form-label fw-500">Profile Photo (optional)</label>
                            <input asp-for="Input.ProfileImage" type="file" class="form-control form-control-lg" accept=".jpg,.jpeg,.png,.gif,.webp" />
                            <small class="text-muted">JPG, PNG, GIF or WebP. Optional.</small>
                        </div>

                        <!-- Register Button -->
                        <button type="submit" class="btn btn-primary btn-lg w-100 fw-600 mb-3">
                            <i class="bi bi-person-plus me-2"></i>
                            Create Account
                        </button>

                        <!-- Divider -->
                        <div class="d-flex align-items-center my-4">
                            <hr class="flex-grow-1" />
                            <span class="px-3 text-muted small">OR</span>
                            <hr class="flex-grow-1" />
                        </div>

                        <!-- Already have account -->
                        <p class="text-center mb-0">
                            Already have an account?
                            <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold text-decoration-none">
                                Sign in here
                            </a>
                        </p>
                    </form>
                </div>
            </div>

            <!-- External Providers Section (if configured) -->
            @{
                if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="card shadow-sm border-0 rounded-lg mt-4">
                        <div class="card-body p-4">
                            <h5 class="card-title text-center fw-bold mb-3">Register with</h5>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="d-grid gap-2">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-outline-secondary" name="provider" value="@provider.Name">
                                            @provider.DisplayName
                                        </button>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show validation summary if there are errors
        document.addEventListener('DOMContentLoaded', function() {
            const validationAlert = document.getElementById('validationAlert');
            if (validationAlert && validationAlert.textContent.trim().length > 0) {
                validationAlert.classList.remove('d-none');
            }
        });
    </script>
}

