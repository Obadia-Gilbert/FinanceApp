<!DOCTYPE html>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinanceApp</title>
    <link rel="icon" type="image/png" href="@Url.Content("~/Lime and Black Modern Finance Logo.png")" />
    <script type="importmap"></script>
    <!-- Antiforgery token for AJAX POSTs - retrieved by JS for security -->
    <meta name="request-verification-token" content="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/datatables.net-bs5@1.13.8/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/dark-mode.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FinanceApp.Web.styles.css" asp-append-version="true" />
</head>
<body data-theme="light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm navbar-modern">
            @{ var path = Context.Request.Path.Value?.ToLowerInvariant() ?? string.Empty; }
            <div class="container-fluid px-2 px-sm-3">
                <!-- Brand/Logo (left) -->
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Lime and Black Modern Finance Logo.png" alt="FinanceApp Logo" class="img-fluid me-2" width="40" height="20"/>
                    <span class="d-none d-sm-inline">FinanceApp</span>
                </a>
                
                <!-- Right: on desktop = theme + profile; on mobile = hamburger only -->
                <div class="d-flex align-items-center gap-2 ms-auto">
                    <!-- Theme toggle: desktop only (mobile: use sidebar) -->
                    <button id="themeToggle" class="theme-toggle btn btn-sm btn-outline-secondary d-none d-md-inline-flex" title="Toggle dark/light mode" aria-label="Toggle dark mode">
                        <i class="bi bi-moon"></i>
                    </button>
                    @if (!path.Contains("/identity/account/login") && !path.Contains("/identity/account/register"))
                    {
                        <!-- User profile: desktop only (mobile: use sidebar Profile link) -->
                        <div class="d-none d-md-block">
                            @await Component.InvokeAsync("UserProfile")
                        </div>
                        <!-- Hamburger: mobile only -->
                        <button class="btn btn-sm btn-outline-secondary d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarCollapse" aria-controls="sidebarCollapse" aria-expanded="false" aria-label="Menu" title="Menu">
                            <i class="bi bi-list"></i>
                        </button>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            @if (!path.Contains("/identity/account/login") && !path.Contains("/identity/account/register"))
            {
                <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" id="sidebarCollapse">
                    @await Html.PartialAsync("_Sidebar")
                </div>
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    @RenderBody()
                </main>
            }
            else
            {
                <main class="col-12 px-md-4">
                    @RenderBody()
                </main>
            }
        </div>
    </div>

    <!-- Toast container for non-blocking messages -->
    <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastContainer"></div>

    <footer class="footer app-footer border-top">
        <div class="container-fluid px-3 px-md-4 py-3">
            <div class="d-flex flex-column flex-md-row align-items-start align-items-md-center justify-content-between gap-2">
                <div class="d-flex align-items-center gap-2">
                    <img src="~/Lime and Black Modern Finance Logo.png" alt="FinanceApp" width="22" height="22" class="rounded-1" />
                    <span class="fw-semibold">FinanceApp</span>
                </div>
                <div class="d-flex flex-wrap align-items-center gap-3 small">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy</a>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="footer-link">Dashboard</a>
                    <span class="text-muted">&copy; @DateTime.Now.Year FinanceApp</span>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/datatables.net@1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/datatables.net-bs5@1.13.8/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Theme toggle (navbar + sidebar on mobile)
        (function(){
            const body = document.body;
            const toggles = document.querySelectorAll('.theme-toggle');
            const iconClass = (theme) => theme === 'dark' ? 'bi bi-sun' : 'bi bi-moon';

            function setTheme(theme){
                body.setAttribute('data-theme', theme);
                localStorage.setItem('theme', theme);
                toggles.forEach(t => {
                    const icon = t.querySelector('i');
                    if (icon) icon.className = iconClass(theme);
                });
            }

            const saved = localStorage.getItem('theme') || 'light';
            setTheme(saved);

            toggles.forEach(t => t.addEventListener('click', function(){
                setTheme(body.getAttribute('data-theme') === 'dark' ? 'light' : 'dark');
            }));
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
