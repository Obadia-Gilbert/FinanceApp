@model (string? DisplayName, string? ProfileImagePath)
@using Microsoft.AspNetCore.Identity
@using FinanceApp.Infrastructure.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown position-relative">
        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 text-dark text-decoration-none py-0 pe-0" href="#" id="navbarProfileDropdown" role="button" data-bs-toggle="dropdown" data-bs-boundary="viewport" data-bs-offset="0,0" aria-expanded="false" aria-label="Open profile menu">
            @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
            {
                <img src="@Model.ProfileImagePath" alt="Profile" class="rounded-circle" style="width: 36px; height: 36px; object-fit: cover;" />
            }
            else
            {
                <span class="rounded-circle d-inline-flex align-items-center justify-content-center bg-primary text-white" style="width: 36px; height: 36px; font-size: 1rem;" aria-hidden="true">@(string.IsNullOrWhiteSpace(Model.DisplayName) ? "?" : Model.DisplayName!.Trim().Substring(0, 1).ToUpperInvariant())</span>
            }
            <span class="d-none d-sm-inline">@(Model.DisplayName ?? User.Identity?.Name ?? "User")</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarProfileDropdown">
            <li>
                <a class="dropdown-item" asp-area="" asp-controller="Profile" asp-action="Edit">
                    <i class="bi bi-person-gear me-2"></i>Edit profile
                </a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                    <button type="submit" class="dropdown-item text-danger" aria-label="Log out">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
</ul>
