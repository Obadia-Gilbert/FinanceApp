@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}
<div class="container-fluid">
    <h1 class="page-title text-danger">Something went wrong</h1>
    <p class="lead">An error occurred while processing your request. Please try again or return to the <a asp-controller="Home" asp-action="Index">home page</a>.</p>
    @if (Model.ShowRequestId)
    {
        <p class="small text-muted">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
        <details class="mt-3">
            <summary class="small">Development mode</summary>
            <p class="small text-muted mt-2">
                The Development environment shows detailed error information. Do not enable it in production.
                Set <code>ASPNETCORE_ENVIRONMENT</code> to <strong>Development</strong> and restart the app for debugging.
            </p>
        </details>
    }
</div>
