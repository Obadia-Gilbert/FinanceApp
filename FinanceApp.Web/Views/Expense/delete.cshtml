@model FinanceApp.Web.Models.ExpenseDeleteViewModel

@{
    ViewData["Title"] = "Delete Expense";
}

<h1>Delete Expense</h1>

<h3>Are you sure you want to delete this expense?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Currency</dt>
        <dd class="col-sm-10">@Model.Currency</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.CategoryName</>

        <dt class="col-sm-2">Expense Date</dt>
        <dd class="col-sm-10">@Model.ExpenseDate.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>